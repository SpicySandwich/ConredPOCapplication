version: '3'


services: 
  
  ProductMicroservice:
    image: productmicroservice
    restart: always
    build: .
    ports:
      - 8093:8093
    environment:
      MYSQL_HOST: mysqldb
      MYSQL_USER: root
      MYSQL_PASSWORD: root
      MYSQL_PORT: 3306
  zookeeper1:
    image: wurstmeister/zookeeper
    ports:
      - 2181:2181
    container_name: zookeeper
  kafka1:
    image: wurstmeister/kafka
    container_name: kafka
    ports:
      - 9092:9092
    environment:
      KAFKA_ADVERTISED_HOST_NAME: localhost
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_CREATE_TOPIC: producttopic:1:1
  mysqldb: 
    image: mysql:8.0.28
    container_name: mysqldb
    ports: 
      - 3307:3306
    cap_add:
      - SYS_NICE    
    environment:
      MYSQL_DATABASE: dbpoc
      MYSQL_ROOT_PASSWORD: root
