version: "3"
services:
  mysqldb:
    image: mysql:5.6
    environment:
      - MYSQL_ROOT_PASSWORD=password
      - MYSQL_DATABASE=dbpoc
      - MYSQL_USER=root
      - MYSQL_PASSWORD=root
    ports:
      - 3306:3306

  ProductMicroservice:
    image: ProductMicroservice.:latest
    ports:
      - 8091:8091
    restart: unless-stopped
    build:
      context: ./
      dockerfile: Dockerfile
    depends_on:
      - mysqldb