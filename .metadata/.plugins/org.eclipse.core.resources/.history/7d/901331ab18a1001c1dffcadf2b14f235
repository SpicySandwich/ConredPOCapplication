version: "3"

     networks:
    app-tier:
      driver: bridge
      
services: 


    
  ProductMicroservice:
    image: productmicroservice
    restart: always
    build: .
    ports:
      - 8093:8093
    environment:
      MYSQL_HOST: mysqldb
      MYSQL_USER: root
      MYSQL_PASSWORD: root
      MYSQL_PORT: 3306
    networks:
      - app-tier
  mysqldb: 
    container_name: mysqldb
    image: mysql:8.0.28
    ports: 
     - 3307:3306   
    cap_add:
      - SYS_NICE    
    environment:
      MYSQL_DATABASE: dbpoc
      MYSQL_ROOT_PASSWORD: root
  zookeeper:
    image: wurstmeister/zookeeper
    restart: always
    ports:
    - "2181:2181"
    networks:
      - app-tier
  kafka:
    image: wurstmeister/kafka
    restart: always
    ports:
    - "9092:9092"
    environment:
      KAFKA_ADVERTISED_HOST_NAME: 127.0.0.1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_CREATE_TOPICS: "producttopic:1:3"
    networks:
      - app-tier