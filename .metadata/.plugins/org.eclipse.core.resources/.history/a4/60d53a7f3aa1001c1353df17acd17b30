version: "3"

networks:
  myapp:
    driver: bridge
      
services: 


    
  ProductMicroservice:
    image: productmicroservice
    restart: always
    build: .
    ports:
      - 8093:8093
    environment:
      MYSQL_HOST: mysqldb
      MYSQL_USER: root
      MYSQL_PASSWORD: root
      MYSQL_PORT: 3306
  networks:
    - "myapp"
  mysqldb: 
    container_name: mysqldb
    image: mysql:8.0.28
    ports: 
     - 3307:3306   
    cap_add:
      - SYS_NICE    
    environment:
      MYSQL_DATABASE: dbpoc
      MYSQL_ROOT_PASSWORD: root
  networks:
    - "myapp"
  zookeeper:
    image: "bitnami/zookeeper:latest"
    container_name: "myapp-zookeeper"
  ports:
    - "2181:2181"
  environment:
    - ALLOW_ANONYMOUS_LOGIN=yes
    
  networks:
    - "myapp"
  kafka:
    image: wurstmeister/kafka
    restart: always
    ports:
    - "9092:9092"
    environment:
      KAFKA_ADVERTISED_HOST_NAME: 127.0.0.1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_CREATE_TOPICS: "producttopic:2:1"
      
    image: bitnami/kafka:2.5.0
    container_name: "myapp-kafka"
    ports:
       - "9092:9092"
  environment:
    KAFKA_BROKER_ID: 1
    KAFKA_LISTENERS: PLAINTEXT://:9092
    KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://10.5.0.1:9092
    KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
    ALLOW_PLAINTEXT_LISTENER: yes
  depends_on:
    - zookeeper     
  networks:
    - "myapp"