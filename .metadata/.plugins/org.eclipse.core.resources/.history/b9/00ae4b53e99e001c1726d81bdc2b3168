version: "3.8"
services:
  mysqldb:
    image: mysql:latest
    environment:
      DB_CONNECTION: mysql
      DB_HOST: mysql
      DB_PORT: 3306
      DB_DATABASE: mysqldb
      DB_USERNAME: root
    ports:
      - 3307:3306

  ProductMicroservice:
    image: productmicroservice:latest
    ports:
      - 8091:8091

    restart: unless-stopped
    build:
      context: ./
      dockerfile: Dockerfile
    depends_on:
      - mysqldb